  T{ true  #if  10          #end <T> 10 }T
  T{ false #if  10 #else 20 #end <T> 20 }T
  T{ true  #if  10 #else 20 #end <T> 10 }T
  T{ false #ifn 10          #end <T> 10 }T
  T{ true  #ifn 10          #end <T>    }T
  T{ false #ifn 10 #else 20 #end <T> 10 }T
  T{ true  #ifn 10 #else 20 #end <T> 20 }T
;
